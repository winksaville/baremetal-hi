#!/usr/bin/env bash
set -ex
VER=v2.4.0.1
if [ ! -d "$1" ]; then
  mkdir -p $1
  git clone git://git.qemu.org/qemu.git $1
  cd $1
  git checkout ${VER}
  git submodule update --init dtc
  mkdir build
  cd build
  virtualenv --python=python2.7 venv
  . venv/bin/activate
  ../configure --target-list=arm-softmmu,arm-linux-user
  make
fi
