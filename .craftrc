# -*- mode: python; -*-
from craftr import *
from craftr.utils import prepend_path

# Add the bin/ folder of the vendor-install-tools default installation path
# that installed the cross-compiler suite.
prepend_path(path.expanduser('~/opt/bin'))

# Default cross-compilers tools.
environ['CC'] = 'arm-eabi-gcc'
environ['CXX'] = 'arm-eabi-g++'
environ['LD'] = 'arm-eabi-ld'
environ['OBJCOPY'] = 'arm-eabi-objcopy'
